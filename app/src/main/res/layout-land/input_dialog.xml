<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/customBackground"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="30">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:hint="Enter recipe title"
            android:id="@+id/titleEditText"
            android:backgroundTint="?attr/customSecondTextColor"
            android:textColorHint="?attr/customHintBackground"
            android:textColor="?attr/customSecondTextColor" />
        <EditText
            android:layout_below="@id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:hint="Enter recipe description"
            android:textColor="?attr/customSecondTextColor"
            android:textColorHint="?attr/customHintBackground"
            android:backgroundTint="?attr/customSecondTextColor"
            android:id="@+id/desdEditText"/>
        <ImageView
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_below="@+id/desdEditText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="20">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="8"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:id="@+id/choose"
                android:text="Choose a photo"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"
                android:layout_below="@id/imageView" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="8"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="20">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="8"/>
            <Button
                android:layout_centerInParent="true"
                android:layout_below="@id/choose"
                android:layout_marginTop="0dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/saveBtn"
                android:background="@drawable/corner2"
                android:textSize="20dp"
                android:text="Save"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="8"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
